<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical"
    tools:context=".SingleProductActivity">

    <!-- Top Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium"
        android:orientation="horizontal">

        <ImageView
            tools:ignore="ContentDescription"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/grey_circular_border"
            android:padding="12dp"
            android:src="@drawable/square_icon"
        />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/logo"
            tools:ignore="ContentDescription" />

        <ImageView
            tools:ignore="ContentDescription"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/grey_circular_border"
            android:padding="10dp"
            android:src="@drawable/heart"
        />
    </LinearLayout>

    <!-- Body -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Main Lamp Image -->
            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/lamp"
                android:scaleType="centerCrop"
                android:src="@drawable/lamp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium">

                <!-- Star review -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TABLE LAMP"
                        android:textColor="@color/textColor"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/star"
                            android:padding="@dimen/xsmall"
                            android:src="@drawable/star_clr" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/star"
                            android:padding="@dimen/xsmall"
                            android:src="@drawable/star_clr" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/star"
                            android:padding="@dimen/xsmall"
                            android:src="@drawable/star_clr" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/star"
                            android:padding="@dimen/xsmall"
                            android:src="@drawable/star_clr" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/star"
                            android:padding="@dimen/xsmall"
                            android:src="@drawable/star_grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reviews"
                            android:textColor="@color/textColor"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true">

                    <!-- Lamp Price -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="@string/lamp_price"
                        android:textColor="@color/textColor"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/buy_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_orange_rect_shape"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingHorizontal="18dp"
                        android:text="@string/buy"
                        android:textAllCaps="false" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Violet Body -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="150dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/violet_circular_border"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Horizontal Scroll Header -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/suggested_for_you"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@string/view_all"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </RelativeLayout>

                <!-- HorizontalScroll List of Suggested Products -->
                <HorizontalScrollView
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- ListWrapper -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <!-- Edison Table Lamp Black -->
                        <LinearLayout
                            android:layout_width="190dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/white_circular_border"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contentDescription="@string/lamp"
                                android:src="@drawable/lamp2" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/small"
                                android:paddingRight="@dimen/small">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/edison_table_lamp"
                                    android:textColor="@color/textColor"
                                    android:textSize="14sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/edison_new_price"
                                        android:textColor="@color/textColor"
                                        android:textSize="13sp" />

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/xsmall">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/xsmall"
                                            android:text="@string/edison_regular_price"
                                            android:textColor="@color/orange"
                                            android:textSize="13sp" />

                                        <LinearLayout
                                            android:layout_width="30dp"
                                            android:layout_height="1dp"
                                            android:layout_centerVertical="true"
                                            android:background="@color/orange" />

                                    </RelativeLayout>

                                    <Space
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1" />

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:background="@drawable/light_orange_circle"
                                        android:contentDescription="@string/heart"
                                        android:padding="6.5dp"
                                        android:src="@drawable/heart_orange_fill" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <!-- Edison Table Lamp White -->
                        <LinearLayout
                            android:layout_width="190dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/white_circular_border"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contentDescription="@string/lamp"
                                android:src="@drawable/lamp3" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/small"
                                android:paddingRight="@dimen/small">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/edison_table_lamp"
                                    android:textColor="@color/textColor"
                                    android:textSize="14sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/edison_new_price"
                                        android:textColor="@color/textColor"
                                        android:textSize="13sp" />

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/xsmall">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/xsmall"
                                            android:text="@string/edison_regular_price"
                                            android:textColor="@color/orange"
                                            android:textSize="13sp" />

                                        <LinearLayout
                                            android:layout_width="30dp"
                                            android:layout_height="1dp"
                                            android:layout_centerVertical="true"
                                            android:background="@color/orange" />
                                    </RelativeLayout>

                                    <Space
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1" />

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:background="@drawable/light_orange_circle"
                                        android:contentDescription="@string/heart"
                                        android:padding="6.5dp"
                                        android:src="@drawable/heart_orange_fill" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Edison Table Lamp White 2 -->
                        <LinearLayout
                            android:layout_width="190dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/white_circular_border"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contentDescription="@string/lamp"
                                android:src="@drawable/lamp3" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/small"
                                android:paddingRight="@dimen/small">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/edison_table_lamp"
                                    android:textColor="@color/textColor"
                                    android:textSize="14sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/edison_new_price"
                                        android:textColor="@color/textColor"
                                        android:textSize="13sp" />

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/xsmall">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/xsmall"
                                            android:text="@string/edison_regular_price"
                                            android:textColor="@color/orange"
                                            android:textSize="13sp" />

                                        <LinearLayout
                                            android:layout_width="30dp"
                                            android:layout_height="1dp"
                                            android:layout_centerVertical="true"
                                            android:background="@color/orange" />
                                    </RelativeLayout>

                                    <Space
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1" />

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:background="@drawable/light_orange_circle"
                                        android:contentDescription="@string/heart"
                                        android:padding="6.5dp"
                                        android:src="@drawable/heart_orange_fill" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>